<Window x:Class="GRIFFITH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GRIFFITH"
        mc:Ignorable="d"
        Title="GRIFFITH" Height="668" Width="1183">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition Height="630"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="Grid" Grid.Row="1"/>

        <Menu x:Name="Menu" Grid.Row="0">
            <MenuItem Header="Меню">
                <MenuItem x:Name="ViewClientMI" Header="Посмотреть клиентов" Click="ViewClientMI_Click"/>
                <MenuItem x:Name="ViewServiceMI" Header="Посмотреть услуги" Click="ViewServiceMI_Click"/>
                <MenuItem x:Name="ViewDiscountMI" Header="Посмотреть скидки" Click="ViewDiscountMI_Click"/>
                <MenuItem x:Name="ViewOrderMI" Header="Посмотреть заказы" Click="ViewOrderMI_Click"/>
            </MenuItem>
            <MenuItem x:Name="AddClientMI" Header="Добавить клиента" Click="AddClientMI_Click"/>
            <MenuItem x:Name="AddServiceMI" Header="Добавить услугу" Click="AddServiceMI_Click"/>
            <MenuItem x:Name="AddDiscountMI" Header="Добавить скидку"/>
        </Menu>
    </Grid>
</Window>
