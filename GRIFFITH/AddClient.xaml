<Window x:Class="GRIFFITH.AddClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GRIFFITH"
        mc:Ignorable="d"
        Title="AddClient" Height="450" Width="606">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="ClientNameTB" Grid.Row="0" Grid.Column="0"
            Background="LightGray" FontSize="18" Margin="10,30,10,30"/>

        <TextBox x:Name="ClientTelTB" Grid.Row="1" Grid.Column="0"
            Background="LightGray" FontSize="18" Margin="10,30,10,30"/>

        <TextBox x:Name="ClientActivTB" Grid.Row="2" Grid.Column="0"
            Background="LightGray" FontSize="18" Margin="10,30,10,30"/>

        <GroupBox Grid.Column="1" x:Name="GroupServices"
            Grid.Row="0" Grid.RowSpan="4" Header="Services">
        </GroupBox>

        <Button x:Name="AddClientButton" Grid.Row="3" Margin="30"
            Content="Добавить клиента" Click="AddClientButton_Click"/>
    </Grid>
</Window>
