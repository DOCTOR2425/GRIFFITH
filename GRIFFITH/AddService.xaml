<Window x:Class="GRIFFITH.AddService"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GRIFFITH"
        mc:Ignorable="d"
        Title="AddService" Height="540" Width="443">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="135*"/>
            <RowDefinition Height="269*"/>
            <RowDefinition Height="120*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="293*"/>
            <ColumnDefinition Width="150*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="ServiceNameTB" Grid.Row="0" Grid.Column="0" Margin="20,40,20,40" 
                 Background="LightGray" FontSize="18"/>
        <TextBox x:Name="ServicePriceTB" Grid.Row="0" Grid.Column="1" Margin="20,40,20,40" 
                 Background="LightGray" FontSize="18"/>
        <TextBox x:Name="ServiceDescriptionTB" Grid.Row="1" Grid.ColumnSpan="2" Margin="20,20,20,20" 
                 Background="LightGray" FontSize="18" MaxWidth="400"/>

        <Button x:Name="AddServiceB" Grid.Row="2" Margin="100,20,100,20"
                Content="Добавить услугу" FontSize="20" Grid.ColumnSpan="2" Click="AddServiceB_Click" />

    </Grid>
</Window>
